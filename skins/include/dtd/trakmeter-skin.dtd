">

<!ENTITY % attrs_image_spacing
          "spacing_left CDATA #REQUIRED
           spacing_top CDATA #REQUIRED
">

<!ENTITY % attrs_font
          "font_size CDATA #IMPLIED
">

<!ENTITY % attrs_background
          "image CDATA #REQUIRED
">

<!ENTITY % attrs_meter_graduation
          "%attrs_image_position;
           image CDATA #REQUIRED
">

